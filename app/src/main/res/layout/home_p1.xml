<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_p1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_layout_night"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/fixed_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_local_music_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_layout_night"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_local_music_iv"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:src="@drawable/phone"
                android:tint="@color/cloudRed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_local_music_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:text="本地音乐"
                        android:textColor="#FDFCFC" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_recently_music_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_layout_night"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_recently_music_iv"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:src="@drawable/recently"
                android:tint="@color/cloudRed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_recently_music_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="最近音乐"
                        android:textColor="#FDFCFC" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:id="@+id/view9"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_my_love_music_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_layout_night"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_my_love_music_iv"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:src="@drawable/love"
                android:tint="@color/cloudRed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_my_love_music_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="我的喜爱"
                        android:textColor="#FDFCFC" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:id="@+id/view10"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ffffff" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/home_devider_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/fixed_View"
        android:layout_marginTop="0dp"
        android:background="@color/colorDividerGray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_above="@+id/fragment_playbar"
        android:layout_below="@id/home_devider_view"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="自建的歌单" />

            <TextView
                android:id="@+id/home_my_list_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/home_my_pl_add_iv"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:src="@drawable/add_menu" />


        </LinearLayout>

        <!--  <ListView
            android:id="@+id/SONGLIST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#696969">

        </ListView>-->
    </LinearLayout>
  <!--  <FrameLayout
        android:id="@+id/fragment_playbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        />
-->
</RelativeLayout>