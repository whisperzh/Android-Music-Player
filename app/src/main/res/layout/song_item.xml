<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#000000"
    android:backgroundTint="@color/nightBg">

    <View
        android:id="@+id/musicitem_playing_v"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="#E91D23"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/musicitem_title_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:singleLine="true"
        android:text="成都"
        android:textColor="#ffffff"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@id/musicitem_playing_v"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/musicitem_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        android:text="赵雷"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/musicitem_playing_v"
        app:layout_constraintTop_toBottomOf="@+id/musicitem_title_tv" />

    <ImageView
        android:id="@+id/moreinfo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/colorWhite"
        app:srcCompat="@drawable/moreinfo" />


</androidx.constraintlayout.widget.ConstraintLayout>
